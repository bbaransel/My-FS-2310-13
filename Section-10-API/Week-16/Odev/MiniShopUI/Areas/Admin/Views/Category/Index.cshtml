@model List<CategoryViewModel>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@(ViewBag.ShowDeleted ? "Çöp Kutusu" : "Kategori Listesi")</h1>
                </div>
                <div class="col-sm-6 d-flex justify-content-end">
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" asp-route-id="@(ViewBag.ShowDeleted ? "false" : "true")" class="btn btn-info btn-sm mr-3">
                        @(ViewBag.ShowDeleted ? "Kategori Listesi" : "Çöp Kutusu")
                    </a>
                    <a asp-area="Admin"
                       asp-controller="Category"
                       asp-action="Create"
                       method="get"
                       class="btn btn-success btn-sm ">Kategori Ekle</a>

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="myDataTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Ürün</th>
                                        <th>Aktif</th>
                                        <th width="55" class="text-center">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in Model)
                                    {
                                        <tr>
                                            <td>@p.Id</td>
                                            <td>
                                                <a asp-area="Admin"
                                                   asp-controller="Category"
                                                   asp-action="Edit"
                                                   asp-route-id="@p.Id"
                                                   method="get"
                                                   class="btn btn-link">@p.Name</a>
                                            </td>
                                            <td>
                                                <form id=isActiveForm_@p.Id
                                                      asp-area="Admin"
                                                      asp-controller="Category"
                                                      asp-action="UpdateIsActive"
                                                      asp-route-id="@p.Id"
                                                      method="post">
                                                    <div class="custom-control custom-switch">
                                                        <input onchange="document.getElementById('isActiveForm_@p.Id').submit();"
                                                               type="checkbox" class="custom-control-input" id="isActive_@p.Id"
                                                        @(p.IsActive ? "checked" : "") />
                                                        <label class="custom-control-label" for="isActive_@p.Id"></label>
                                                    </div>
                                                </form>
                                            </td>
                                            <td class="d-flex justify-content-around">
                                                @if (!ViewBag.ShowDeleted)
                                                {
                                                    <a asp-area="Admin"
                                                       asp-controller="Category"
                                                       asp-action="Edit"
                                                       asp-route-id="@p.Id"
                                                       method="get"
                                                       class="btn btn-warning btn-sm"><i class="far fa-edit"></i></a>
                                                    <a asp-area="Admin"
                                                       asp-controller="Category"
                                                       asp-action="Delete"
                                                       asp-route-id="@p.Id"
                                                       method="get"
                                                       class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                                }
                                                else
                                                {
                                                    <a asp-area="Admin"
                                                       asp-controller="Category"
                                                       asp-action="SoftDelete"
                                                       asp-route-id="@p.Id"
                                                       method="get"
                                                       class="btn btn-success btn-sm"><i class="fas fa-undo-alt"></i></a>
                                                    <a asp-area="Admin"
                                                       asp-controller="Category"
                                                       asp-action="HardDelete"
                                                       asp-route-id="@p.Id"
                                                       method="get"
                                                       class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                                }

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Styles {
    @await Html.PartialAsync("_DataTablesCssPartial")
}

@section Scripts {
    @await Html.PartialAsync("_DataTablesJsPartial")
}