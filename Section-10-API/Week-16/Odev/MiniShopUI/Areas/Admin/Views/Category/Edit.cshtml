@model EditCategoryViewModel
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kategori Güncelleme</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <form asp-area="Admin"
                          asp-controller="Category"
                          asp-action="Edit"
                          method="post">
                        <!-- Kategori Bilgileri -->
                        <div class="card card-success">
                            <div class="card-header">
                                <div class=" d-flex justify-content-between align-items-center">
                                    <h3 class="card-title ">Kategori Bilgileri</h3>
                                    <a asp-area="admin" asp-controller="Category" asp-action="SoftDelete" asp-route-id="@Model.Id"
                                       class="btn btn-warning">
                                        Çöp Kutusuna Gönder
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" type="text" class="form-control" placeholder="Ürün adını giriniz...">
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="ml-3"> Seçenekler</label>
                                            <div class="icheck-primary ml-3">
                                                <input asp-for="IsActive" type="checkbox">
                                                <label asp-for="IsActive" for="IsActive">
                                                </label>
                                            </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <label>Description</label>
                                        <textarea asp-for="Description">Place <em>some</em> <u>text</u> <strong>here</strong></textarea>
                                    </div>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button type="submit"
                                    class="btn btn-primary btn-block btn-lg">
                                Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>


@section Styles {
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/admin/plugins/summernote/summernote-bs4.min.css">
}

@section Scripts {
    <!-- Summernote -->
    <script src="~/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $('#Description').summernote({
            height: 200
        })
    </script>
}