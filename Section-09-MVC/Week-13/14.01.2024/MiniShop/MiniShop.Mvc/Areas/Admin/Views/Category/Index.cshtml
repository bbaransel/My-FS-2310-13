@model List<CategoryViewModel>
@section Styles{
    @await Html.PartialAsync("_DataTablesCssPartial")
}
@section Scripts{
    @await Html.PartialAsync("_DataTablesJsPartial")
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-6 text-primary">Ürünler</h1>
        </div>
        <div class="col-md-6">
            <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success float-end">Kategori Ekle</a>
        </div>
    </div>
    <table class="table" id="entityTable">
        <thead>
        <tr>
            <th>Resim</th>
            <th>Id</th>
            <th>Kategori</th>
            <th>#</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var c in Model)
        {
            <tr>
                <th>@c.Id</th>
                <td>@c.Name</td>
                <td>@c.Description</td>
                <td width="120">
                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
