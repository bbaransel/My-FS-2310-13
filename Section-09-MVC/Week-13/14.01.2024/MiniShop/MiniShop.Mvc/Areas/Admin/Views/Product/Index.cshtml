@model List<ProductViewModel>
@section Styles{
    @await Html.PartialAsync("_DataTablesCssPartial")
}
@section Scripts{
    @await Html.PartialAsync("_DataTablesJsPartial")
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-6 text-primary">Ürünler</h1>
        </div>
        <div class="col-md-6">
            <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-success float-end">Ürün Ekle</a>
        </div>
    </div>
    <table class="table" id="entityTable">
        <thead>
        <tr>
            <th>Resim</th>
            <th>Id</th>
            <th>Ürün</th>
            <th>Fiyat</th>
            <th>#</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var p in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@p.ImageUrl" width="35" height="70" />
                </td>
                <th>@p.Id</th>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td width="120">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

