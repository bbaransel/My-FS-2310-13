@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container d-flex ">
    <div class="row ">
    @foreach (var p in Model)
    {
        <div class="col col-md-3 p-3">
            <div class="card p-3">
                        <img src="~/images/@p.ImageUrl" class="card-img-top product-image m-auto border-0" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@p.Name</h5>
                            <p class="card-text">@p.Properties</p>
                            <p class="card-text">@p.Price</p>
                            <a asp-area="" asp-controller="Home" asp-action="GetById" asp-route-id="@p.Id" class="btn btn-primary">Detay</a>
                        </div>
            </div>
        </div>
        }
    </div>
</div>

