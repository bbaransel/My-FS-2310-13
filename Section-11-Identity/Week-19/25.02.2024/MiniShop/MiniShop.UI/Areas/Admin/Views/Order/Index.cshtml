@model OrderFilterViewModel
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Siparişler</h1>
                </div>
                <div class="col-sm-6 d-flex align-items-center justify-content-end">
                    <label class="mr-3 pb-2">Ürünler</label>
                    <div class="form-group w-50">
                        <select onchange="filterByProductId(this)" asp-items="Model.ProductListItems" class="form-control">
                            <option>Seçiniz...</option>
                        </select>
                    </div>
                </div>
                <!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Orders -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                    <!-- /.card-header -->
                        <div class="card-body">
                            <table id="myDataTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tarih</th>
                                        <th>Kullanıcı</th>
                                        <th>Tutar</th>
                                        <th>Durum</th>
                                        <th width="55" class="text-center">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @await Html.PartialAsync("_OrderListPartial",Model.Orders)
                                </tbody>
                            </table>
                        </div>
                    <!-- /.card-body -->
                    </div>
                <!-- /.card -->
                </div>
            </div>
            <!-- /Orders -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<!-- /.content-wrapper -->


@section Styles{
    @await Html.PartialAsync("_DataTablesCssPartial")
}

@section Scripts{
    @await Html.PartialAsync("_DataTablesJsPartial")
}
@section TopScripts{
       <script>
            const filterByProductId = function (element) {
                console.log(element.value)
                const tBody = $('tbody');
                console.log(tBody);
                var id = element.value;
                $.ajax({
                    url: `/Admin/Order/FilterByProductId/${id}`,
                    type:'GET',
                    success: (response) => {
                        tBody.html(response);
                    },
                    error: (err)=>{
                        console.log(err)
                    }
                })
            }
       </script>
}

