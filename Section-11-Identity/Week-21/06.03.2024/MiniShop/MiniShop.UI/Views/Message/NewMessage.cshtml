@model MessageViewModel
<div class="container w-25 mt-5">
    <h6 class="display-4">Mesaj Gönder</h6>
    <hr />
    <form asp-area=""
          asp-controller="Message"
          asp-action="NewMessage"
          method="post">
        <div class="row g-2">
            <div class="col-md-12 text-danger" asp-validation-summary="All"></div>
            <div class="col-md-12">
                <div class="form-group mb-2">
                    <label asp-for="ToName"></label>
                    <select name="ToId" class="form-control" asp-items="@Model.UserList"></select>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group mb-2">
                    <label asp-for="Text"></label>
                    <textarea asp-for="Text" class="form-control"></textarea>
                </div>
            </div>
            <div class="col-md-12 mt-4 text-center">
                <button class="btn btn-primary w-100 " type="submit">Gönder</button>
            </div>
        </div>
    </form>
</div>