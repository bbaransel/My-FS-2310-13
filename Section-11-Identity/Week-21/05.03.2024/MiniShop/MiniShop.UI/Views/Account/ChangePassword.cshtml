@model ChangePasswordViewModel
<div class="container w-50">
    <h1 class="display-4 text-primary">Şifre Değiştirme</h1>
    <hr />
    <form asp-area="" asp-controller="Account" asp-action="ChangePassword" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group mb-2">
            <label asp-for="CurrentPassword"></label>
            <input asp-for="CurrentPassword" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="ReNewPassword"></label>
            <input asp-for="ReNewPassword" class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn btn-success btn-block">Şifreyi Değiştir</button>
        </div>
    </form>
</div>