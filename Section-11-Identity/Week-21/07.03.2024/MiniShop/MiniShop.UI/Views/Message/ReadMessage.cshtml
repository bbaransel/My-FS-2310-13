@model MessageViewModel
<div class="container p-3">
    <h1 class="display-4 text-primary">Gelen Mesaj</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="text-danger font-weight-bold" asp-for="FromName"></label>
                <label>@Model.FromName</label>
            </div>
            <div class="form-group">
                <label class="text-danger font-weight-bold" asp-for="Text"></label>
                <label>@Model.Text</label>
            </div>
            <div class="form-group">
                <label class="text-danger font-weight-bold" asp-for="SendingDate"></label>
                <label>@Model.SendingDate</label>
            </div>
            <div>
                <a asp-area="" asp-controller="Message" asp-action="Index" class="btn btn-warning btn-sm">Geri Dön</a>
            </div>
        </div>
        <div class="col-md-6">
            <form asp-area="" asp-controller="Message" asp-action="NewMessage" method="post">
                <input type="hidden" value="@Model.FromId" name="ToId" />
                <input type="hidden" value="@Model.Id" name="RelatedId" />
                <div class="col-md-12">
                    <div class="form-group mb-2">
                        <label asp-for="ReplyText"></label>
                        <textarea asp-for="ReplyText" rows="4" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">Yanıtla</button>
                </div>
            </form>
        </div>
    </div>

</div>